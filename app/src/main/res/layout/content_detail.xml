<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zgas.tesselar.myzuite.Controller.Activity.UserOperator.DetailActivityOperator"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:id="@+id/activity_detail_tv_prompt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/icon_account"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_client_id"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_detail_tv_client_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_grey_800"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_prompt_id" />

    <TextView
        android:id="@+id/activity_detail_prompt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_account"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_client_name"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_client_id" />

    <TextView
        android:id="@+id/activity_detail_tv_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/grey_800"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_prompt_username" />

    <TextView
        android:id="@+id/activity_detail_prompt_case_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_address"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_address"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_client_name" />

    <TextView
        android:id="@+id/activity_detail_tv_case_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/grey_800"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_prompt_case_address" />

    <TextView
        android:id="@+id/activity_detail_case_programmed_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_clock"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_hour_set"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_case_address" />

    <TextView
        android:id="@+id/activity_detail_tv_time_programmed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/grey_800"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_case_programmed_time" />

    <TextView
        android:id="@+id/activity_detail_prompt_seen_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_clock_alert"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_hour_seen"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_time_programmed" />

    <TextView
        android:id="@+id/activity_detail_tv_time_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/grey_800"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_prompt_seen_time" />

    <TextView
        android:id="@+id/activity_detail_prompt_time_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="7dp"
        android:drawableLeft="@drawable/icon_clock_in"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_hour_made"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_time_seen" />

    <TextView
        android:id="@+id/activity_detail_prompt_arrival_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="15dp"
        android:drawableLeft="@drawable/icon_clock_out"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_hour_arrived"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/activity_detail_prompt_time_in"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_time_seen" />

    <TextView
        android:id="@+id/activity_detail_tv_time_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_prompt_time_in"
        android:layout_marginStart="68dp"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/activity_detail_tv_arrived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintLeft_toRightOf="@+id/activity_detail_tv_time_in"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_prompt_arrival_time"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/activity_detail_prompt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/icon_clipboard"
        android:drawablePadding="3dp"
        android:drawableTint="@color/dark_grey_300"
        android:gravity="center"
        android:text="@string/prompt_status"
        android:textColor="@color/grey_500"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_time_in" />

    <TextView
        android:id="@+id/activity_detail_tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/grey_800"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_prompt_status" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_detail_fab_finished"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:backgroundTint="@color/light_green"
        app:fabSize="mini"
        app:srcCompat="@drawable/icon_end"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_status"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/activity_detail_fab_in_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_detail_fab_in_progress"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:tint="@color/white"
        app:backgroundTint="@color/amber"
        app:fabSize="mini"
        app:srcCompat="@drawable/icon_gas_tank"
        app:layout_constraintLeft_toRightOf="@+id/activity_detail_fab_finished"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_status"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintRight_toLeftOf="@+id/activity_detail_fab_cancel" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_detail_fab_cancel"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:backgroundTint="@color/red"
        app:fabSize="mini"
        app:srcCompat="@drawable/icon_close"
        app:layout_constraintLeft_toRightOf="@+id/activity_detail_fab_in_progress"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_detail_tv_status"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
